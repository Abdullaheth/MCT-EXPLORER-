  return await res.json();
}
import React, { useEffect, useState } from "react";
import { Link } from "react-router-dom";
import { getCoins } from "../services/api";

function TopCoins({ limit = 10 }) {
  const [coins, setCoins] = useState([]);

  useEffect(() => {
    getCoins()
      .then((data) => setCoins(data))
      .catch((err) => console.error("Error fetching coins:", err));
  }, []);

  return (
    <div className="p-4 bg-white shadow rounded-2xl">
      <h2 className="text-xl font-bold mb-3">Top Coins</h2>
      <div className="overflow-x-auto">
        <table className="min-w-full border border-gray-300 rounded-lg">
          <thead>
            <tr className="bg-gray-100">
              <th className="p-2 border">#</th>
              <th className="p-2 border">Coin</th>
              <th className="p-2 border">Price</th>
              <th className="p-2 border">24h Change</th>
            </tr>
          </thead>
          <tbody>
            {coins.slice(0, limit).map((coin, index) => (
              <tr key={coin.id} className="text-center hover:bg-gray-50">
                <td className="p-2 border">{index + 1}</td>
                <td className="p-2 border flex items-center gap-2">
                  <img src={coin.image} alt={coin.name} className="w-5 h-5" />
                  {coin.name} ({coin.symbol.toUpperCase()})
                </td>
                <td className="p-2 border">
                  ${coin.current_price.toLocaleString()}
                </td>
                <td
                  className={`p-2 border ${
                    coin.price_change_percentage_24h > 0
                      ? "text-green-600"
                      : "text-red-600"
                  }`}
                >
                  {coin.price_change_percentage_24h?.toFixed(2)}%
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      {limit < 100 && (
        <div className="text-right mt-2">
          <Link
            to="/coins"
            className="text-blue-600 hover:underline font-medium"
          >
            View All â†’
          </Link>
        </div>
      )}
    </div>
  );
}

export default TopCoins;
